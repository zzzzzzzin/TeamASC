<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="mapper.process">

	<resultMap id="processMap" type="processVO">
		<id property="processSeq" column="process_seq"/>
		<result property="projectSeq" column="project_seq"/>
		<result property="projectFinishYn" column="project_finish_yn"/>
		<result property="documentsFinishYn" column="documents_finish_yn"/>
		<result property="taskFinishYn" column="task_finish_yn"/>
		<result property="wbsFinishYn" column="wbs_finish_yn"/>
		<result property="implementationFinishYn" column="implementation_finish_yn"/>
		<result property="testFinishYn" column="test_finish_yn"/>
		<result property="completeYn" column="complete_yn"/>
	</resultMap>

	<!-- 프로세스 조회  -->
	<select id="selectProcess" resultMap="processMap" resultType="processVO" parameterType="java.lang.Integer">
		<![CDATA[
			select * 
			  from process 
			 where project_seq = #{projecSeq} 
		]]>
	</select>

	<!-- 프로젝트 프로세스 완료  -->
	<select id="projectfinish" parameterType="java.lang.Integer">
		<![CDATA[
			insert into process(project_seq,project_finish_yn) values(#{projectSeq},'Y') 	
		]]>
	</select>
	
</mapper>